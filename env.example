# 环境配置
NODE_ENV=development
PORT=3000

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/guji_dev

# Redis配置
REDIS_URL=redis://localhost:6379

# 识典古籍网站配置
SHIDIANGUJI_BASE_URL=https://www.shidianguji.com
SHIDIANGUJI_SEARCH_URL=https://www.shidianguji.com/search

# 缓存配置
CACHE_TTL=3600
MEMORY_CACHE_MAX_SIZE=100
MEMORY_CACHE_TTL=300

# 反爬策略配置
MAX_CONCURRENT_REQUESTS=1
REQUESTS_PER_SECOND=2
REQUEST_DELAY=1000
BURST_LIMIT=5
REQUEST_TIMEOUT=30000

# 搜索限制配置
MAX_SEARCH_RESULTS=1000
SEARCH_CACHE_TTL=3600

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=logs

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090

# API配置
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# 本地缓存配置
LOCAL_CACHE_ENABLED=true
LOCAL_CACHE_DIR=./guji-cache
LOCAL_CACHE_MAX_SIZE=1000
